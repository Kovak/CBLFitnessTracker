#:kivy 1.0.9
#:import kivy kivy

<NumPad>:
    grid1: g1_1
    button_0: b0
    button_1: b1
    button_2: b2
    button_3: b3
    button_4: b4
    button_5: b5
    button_6: b6
    button_7: b7
    button_8: b8
    button_9: b9
    button_ok: bok
    textinput1: t1_1
    box1: b1_1

    BoxLayout:
        id: b1_1
        orientation: 'vertical'
        pos: root.x, root.top - self.height
        size: root.width, root.height
        padding: 10
        spacing: 5
        TextInput:
            id: t1_1
            font_size: 18
            size_hint: 1, .2
            multiline: 'false'
            text: str(root.current_value)
        GridLayout:
            id: g1_1
            padding: 1
            size_hint: 1, .8
            spacing: 5
            cols: 3
            Button:
                id: b7
                font_size: 18
                text: "7"
				size_hint: .33, .25
                on_press: root.button_7_press()
            Button:
                id: b8
                font_size: 18
                text: "8"
                size_hint: .33, .25
                on_press: root.button_8_press()
            Button:
                id: b9
                font_size: 18
                text: "9"
                size_hint: .33, .25
                on_press: root.button_9_press()
            Button:
                id: b4
                font_size: 18
                text: "4"
                size_hint: .33, .25
                on_press: root.button_4_press()
            Button:
                id: b5
                font_size: 18
                text: "5"
                size_hint: .33, .25
                on_press: root.button_5_press()
            Button:
                id: b6
                font_size: 18
                text: "6"
                size_hint: .33, .25
                on_press: root.button_6_press()
            Button:
                id: b1
                font_size: 18
                text: "1"
                size_hint: .33, .25
                on_press: root.button_1_press()
            Button:
                id: b2
                font_size: 18
                text: "2"
                size_hint: .33, .25
                on_press: root.button_2_press()
            Button:
                id: b3
                font_size: 18
                text: "3"
                size_hint: .33, .25                
                on_press: root.button_3_press()
            Button:
                id: b0
                font_size: 18
                text: "0"    
                size_hint: .33, .25
                on_press: root.button_0_press()
            Button:
                id: bok
                font_size: 18
                text: "enter"
                size_hint: .33, .25
                
<Controller>:
    label_wid: my_custom_label

    BoxLayout:
        orientation: 'vertical'
        padding: 20

        Button:
            text: 'My controller info is : ' + root.info
            on_press: root.do_action()

        Label:
            id: my_custom_label
            text: 'My label before button press'